{
  "extends": "react-app",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "rules": {
    "camelcase": [
      2, { "properties": "never" }
    ],
    "dot-notation": [
      2, { "allowKeywords": true }
    ],
    "quotes": [
      2, "single", { "allowTemplateLiterals": true }
    ],
    "semi": 2,
    "curly": [2, "all"],
    "no-empty": 2,
    "eqeqeq": [2, "allow-null"],
    "no-use-before-define": [2, "nofunc"],
    "max-len": [2, 120, 2],
    "no-nested-ternary": 2,
    "react/jsx-key": 2,
    "react/jsx-curly-spacing": [2, "never"],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-indent": [2, 2],
    "react/prop-types": 2,
    "react/jsx-wrap-multilines": 2
  }
}
